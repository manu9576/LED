<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LED.UserControls"
             xmlns:Models="clr-namespace:LED.Models" x:Class="LED.UserControls.UC_OrderdBy"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dg_question_orderedBy_Contenaire" Margin="0" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" AutoGenerateColumns="False" IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding Questions_orderedBy}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Containaire}" ClipboardContentBinding="{x:Null}" Header="Contenaires"/>
                <DataGridTextColumn Binding="{Binding Items}" ClipboardContentBinding="{x:Null}" Header="Items"/>
            </DataGrid.Columns>
            <DataGrid.DataContext>
                <Models:Question/>
            </DataGrid.DataContext>
        </DataGrid>
    </Grid>
</UserControl>
