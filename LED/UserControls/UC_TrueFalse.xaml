<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LED.UserControls"
             xmlns:Models="clr-namespace:LED.Models" x:Class="LED.UserControls.UC_TrueFalse"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid x:Name="dg_question_trufalse" Margin="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding Question_vraifaux}">
            <DataGrid.DataContext>
                <Models:Question/>
            </DataGrid.DataContext>
        </DataGrid>

    </Grid>
</UserControl>
